    "@pulumi/awsx": "2.5.0"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "20.1.1",
    "@types/aws-lambda": "8.10.133",
    "@types/node": "20.11.16",
    "@mountain-cms/helpers": "link:packages/helpers",
    "@mountain-cms/schemas": "link:packages/schemas",
    "@mountain-cms/templates": "link:packages/templates",
    "esbuild": "0.20.0",
    "glob": "10.3.10",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
